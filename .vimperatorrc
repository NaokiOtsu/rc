config.toolbars.delicious = [["ybToolbar"], "Delicious"];
config.toolbars.amazon = [["AMAZON_NS_PH_TB-Toolbar"], "Delicious"];
EOM

" Firebug mappings
js <<EOM
var firebugOpen = false;
liberator.modules.commands.addUserCommand(['firebug'],
  'Control firebug from within vimperator.',
  function(args) {
      if ( args[0] === "open" ) {
          if ( firebugOpen ) {
              Firebug.closeFirebug();
              firebugOpen = false;
          }
          else {
              Firebug.toggleBar(true, args[1]);
              firebugOpen = true;
          }
      }
      if ( args[0] === "close" ) {
          Firebug.closeFirebug();
          firebugOpen = false;
      }
  }
);
EOM
noremap <Leader>c :firebug open console<CR>

" Firebug inspect mode hint
js <<EOM
hints.addMode('i', 'firebug inspect hint', function(elem){
    Firebug.toggleBar(true);
    Firebug.chrome.select(elem);
}, function() '//*');
EOM

" contenteditable hint
js <<EOM
hints.addMode('e', 'contenteditable hint', function(elem){
    elem.setAttribute("contenteditable", true);
    elem.focus();
}, function() '//*');
EOM

" hash url hint
js <<EOM
hints.addMode('n', 'hash url hint', function(elem){
    var pointer = elem.getAttribute("id") || elem.getAttribute("name");
    util.copyToClipboard(elem.ownerDocument.defaultView.location.href + (pointer ? "#" + pointer : ""), true);
}, function() '//*');
EOM

" for youtuberepeat
js <<EOM
liberator.modules.commands.addUserCommand(["repeat"], "open current URL as youtuberepeat URL",
    function(args) {
        liberator.open(content.document.location.href.replace("www.youtube.com", "www.youtuberepeat.com"));
    }
);
EOM

" read local conf
source! ~/.vimperatorrc.local

"complete!
echo ".vimperatorrc sourced"
