" common snippets

snippet n
	(function() {
		${1:body}
	})();

snippet d
	document.addEventListener("DOMContentLoaded", function() {
		${1:body}
	}, false);

snippet a
	addEventListener("${1:type}", function() {
		${2:body}
	}, false);

snippet i
	${1:elem}.getElementById("${2:selector}")

snippet t
	${1:elem}.getElementByTagName("${2:selector}")

snippet c
	${1:elem}.getElementByClassName("${2:selector}")

snippet q
	${1:elem}.querySelectorAll("${2:selector}")
