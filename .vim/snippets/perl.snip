snippet u
	use strict;
	use warnings;

snippet d
	use Data::Dump qw/dump/;

snippet c
	use Carp qw/croak/;

snippet n
	sub new {
		my $class = shift;
		my $args = ref $_[0] ? $_[0] : +{@_};

		${1:code}

		bless $args, $class;
	}

snippet l
	use Class::Accessor::Lite (
		rw => [qw/${1:rw_accessors}/],
	);

